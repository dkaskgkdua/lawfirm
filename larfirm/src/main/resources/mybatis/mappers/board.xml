<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="Board">
	
	<select id="getListCount" resultType="_int">
		SELECT COUNT(*)
		FROM BOARD	
	</select>
	
	<select id="selectList" resultType="Board" parameterType="java.util.Map">
		SELECT ID,
			   BOARD_TITLE,
			   BOARD_COUNT,
			   REGI_ID,
			   REGI_DT		
		FROM BOARD
		WHERE BOARD_CATEGORY=#{board_category}

	</select>
	
	<update id="readcount_update" parameterType="_int">
		UPDATE BOARD
		SET BOARD_READCOUNT = BOARD_READCOUNT +1
		WHERE ID=#{id}
	</update>
	
	
	<select id="getDetail" resultType="Board" parameterType="_int">
		SELECT ID,
			   BOARD_CATEGORY,
			   BOARD_TITLE,
			   BOARD_CONTENT,
			   REGI_ID,
			   REGI_DT			   
		FROM BOARD
		WHERE ID=#{id}
	</select>
	
	
	
